{
    "config": {
    "source": "./source",
    "theme": "<< change this relative path to point directly to assets directory >>"
    },
    "description": "Theme packages builder",
    "devDependencies": {
      "autoprefixer": "^9.1.2",
      "copyfiles": "^2.0.0",
      "eslint": "^5.4.0",
      "eslint-config-standard": "^11.0.0",
      "eslint-plugin-import": "^2.14.0",
      "eslint-plugin-node": " ^7.0.1",
      "eslint-plugin-promise": "^4.0.0",
      "eslint-plugin-standard": "^3.1.0",
      "imagemin-cli": "^3.0",
      "mkdirp": "^0.5.1",
      "node-sass": "^4.9.3",
      "onchange": "^4.1.0",
      "postcss-cli": "^6.0.0",
      "rimraf": "^2.6.2",
      "uglify-js": "^3.4.7"
    },
    "keywords": [],
    "license": "MIT",
    "name": "pacakges-builder",
    "repository": {
      "type": "git",
      "url": "https://github.com/estebanspina/vm.git"
    },
    "scripts": {
      "build:all": "npm run build:css && npm run build:fonts && npm run build:images && npm run build:js",
      "build:css": "npm run css-clean && npm run css && npm run css-autoprefixer",
      "build:fonts": "npm run fonts-clean && npm run fonts",
      "build:images": "npm run images-clean && npm run images",
      "build:js": "npm run js-clean && npm run js-lint && npm run js",
      "css": "node-sass --output-style compressed -o $npm_package_config_theme/css $npm_package_config_source/css",
      "css-autoprefixer": "postcss -u autoprefixer -r $npm_package_config_theme/css/theme.css",
      "css-clean": "rimraf $npm_package_config_theme/css/theme.css",
      "fonts": "copyfiles -f $npm_package_config_source/fonts/* $npm_package_config_theme/fonts",
      "fonts-clean": "rimraf $npm_package_config_theme/fonts/*",
      "images": "imagemin $npm_package_config_source/images/* -o $npm_package_config_theme/images",
      "images-clean": "rimraf $npm_package_config_theme/images/*",
      "js": "uglifyjs $npm_package_config_source/js/*.js -m -c -o $npm_package_config_theme/js/theme.js",
      "js-clean": "rimraf $npm_package_config_theme/js/theme.js",
      "js-lint": "eslint $npm_package_config_source/js/",
      "watch:all": "onchange \"$npm_package_config_source/**/*.js\" \"$npm_package_config_source/**/*.scss\" -p -- npm run build:css && npm run build:js"
    },
    "version": "1.0.0"
  }
